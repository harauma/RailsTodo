<h1>ユーザ一覧だお</h1>

<% if @users %>
<table class="ui celled table">
  <thead>
    <tr>
      <th><h2>ユーザ名</h2></th>
      <th><h2>ログイン回数</h2></th>
      <th><h2>最終ログイン</h2></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <div class="item">
      <tr>
        <td data-label="ユーザ名"><%= user.username %></td>
        <td data-label="ログイン回数"><%= user.sign_in_count %></td>
        <td data-label="最終ログイン"><%= user.last_sign_in_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>