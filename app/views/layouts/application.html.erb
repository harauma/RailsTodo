<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="ui borderless main menu">
    <div class="ui text container">
      <div class="header item">
        <img class="logo" src="/gopher.gif">
        Todoリスト
        <img class="logo" src="/gopher.gif">
      </div>
      <% if user_session %>
      <a rel="nofollow" class="item" data-method="delete" href="/users/logout">ログアウト</a>
      <a rel="nofollow" href="/todos/new" class="item">Todo作成</a>
      <a rel="nofollow" href="/todos" class="item">Todo一覧</a>
      <a rel="nofollow" href="/user/all" class="item">ユーザ一覧</a>
      <% else %>
      <a rel="nofollow" class="item" href="/users/login">ログイン</a>
      <% end %>
    </div>
  </div>
  <div class="ui main contener">
    <% if notice %>
    <p class="mes"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="mes"><%= alert %></p>
    <% end %>
      <%= yield %>
  </div>
  </body>
</html>
